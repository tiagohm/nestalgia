        <HBox alignment="CENTER_LEFT"
              spacing="4.0">
            <Label text="B4"
                   minWidth="64.0"/>
            <ComboBox fx:id="b4ComboBox"
                      minWidth="220.0"/>
        </HBox>
        <HBox alignment="CENTER_LEFT"
              spacing="4.0">
            <Label text="B5"
                   minWidth="64.0"/>
            <ComboBox fx:id="b5ComboBox"
                      minWidth="220.0"/>
        </HBox>
        <HBox alignment="CENTER_LEFT"
              spacing="4.0">
            <Label text="B6"
                   minWidth="64.0"/>
            <ComboBox fx:id="b6ComboBox"
                      minWidth="220.0"/>
        </HBox>
        <HBox alignment="CENTER"
              spacing="2.0">
            <Button text="Clear key bindings"
                    onAction="#clearKeyBindings"/>
        </HBox>
    </VBox>
</AnchorPane>
